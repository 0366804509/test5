import tkinter as tk
from tkinter import messagebox

# Kiểm tra thông tin đăng nhập
def check_login():
    username = entry_username.get()
    password = entry_password.get()

    # Thông tin đăng nhập giả lập
    correct_username = "admin"
    correct_password = "12345"

    if username == correct_username and password == correct_password:
        messagebox.showinfo("Đăng nhập thành công", "Chào mừng bạn đến với hệ thống!")
    else:
        messagebox.showerror("Lỗi đăng nhập", "Tên đăng nhập hoặc mật khẩu không đúng!")

# Tạo cửa sổ chính
root = tk.Tk()
root.title("Đăng nhập")

# Thêm các thành phần giao diện
label_username = tk.Label(root, text="Tên đăng nhập:")
label_username.pack(pady=5)

entry_username = tk.Entry(root)
entry_username.pack(pady=5)

label_password = tk.Label(root, text="Mật khẩu:")
label_password.pac
